generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String   @id @default(uuid())
  name        String
  email       String   
  password    String
  photo       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chats      Chat[]  @relation("UserChats")
  rooms      Room[]  @relation("AdminRooms")
}

model Room {

  id        String   @id @default(cuid())
  slug  String  @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  adminId   String
  admin      User    @relation(fields: [adminId], references: [id], name: "AdminRooms")
  chats      Chat[]  @relation("RoomChats")
  
}

model Chat  {
  id        String   @id @default(uuid())
  message  String
  userId    String
  roomId    String
  User     User    @relation(fields: [userId], references: [id], name: "UserChats")
  Room    Room    @relation(fields: [roomId], references: [id], name: "RoomChats")

}


